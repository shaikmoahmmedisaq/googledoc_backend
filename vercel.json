{
  "version": 2,
  "builds": [
    {
      "src": "core_app/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "installCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
      }
    }
  ],
  "routes": [
    {
      "src": "/staticfiles_build/static/(.*)",
      "dest": "/staticfiles_build/static/admin/$1"
    },
    {
      "src": "/(.*)",
      "dest": "core_app/wsgi.py"
    }
  ]
}
